     * @ParamConverter(
     *     name="entity",
     *     converter="fos_rest.request_body",
     *     options={
     *         "validator"={"groups"={"{{ entityDash }}:create"}},
     *         "deserializationContext"={"groups"={"{{ entityDash }}:create"}}
